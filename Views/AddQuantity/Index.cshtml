@model IEnumerable<BookShelfHaven5.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Add Quantity</h1>


<a asp-action="Index" asp-controller="AddAdmin" class="btn btn-success">Go back to admin page</a>
@using (Html.BeginForm("Index", "AddQuantity", FormMethod.Get))
{
    <p>
        <input type="text" name="QuantitySearch" placeholder="Search by Product Name...">
        <input type="submit" value="Search">
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductNames)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductNames)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
           
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-primary">View Details</a>
                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-primary">Add Quantity</a>


            </td>
        </tr>
}
    </tbody>
</table>
